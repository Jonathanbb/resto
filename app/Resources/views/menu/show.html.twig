{% extends 'admin.layout.html.twig' %}

{% block body %}
    <h1>Menu</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Productname</th>
                <td>{{ menu.productName }}</td>
            </tr>
            <tr>
                <th>Productdescription</th>
                <td>{{ menu.productDescription }}</td>
            </tr>
            <tr>
                <th>Productimage</th>
                <td><img src="{{ asset('bundles/app/images/menu.productImage')}}" alt="menu"> </td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ menu.price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ menu.stock }}</td>
            </tr>
            <tr>
                <th>Cat√©gorie</th>
                <td>{{ menu.category_id }}</td>
            </tr>


        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('menu_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('menu_edit', { 'id': menu.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
